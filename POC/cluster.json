{ 
    "__default__" :
    {
        "minSpec" : "-V -S /bin/bash -l h_vmem=10G -pe ncpus 1",
        "lowSpec" : "-V -S /bin/bash -l h_vmem=20G -pe ncpus 2",
        "medSpec" : "-V -S /bin/bash -l h_vmem=25G -pe ncpus 4",
        "maxSpec" : "-V -S /bin/bash -l h_vmem=30G -pe ncpus 8",
    }
}
