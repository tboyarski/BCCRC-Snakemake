# Rule specific configurations set in the cluster.json file
# Called:       "snakemake bam/Pfeiffer_realigned_sorted.bam"

rule sortBAM:
    input:
        expand("bam/{samples}_realigned.bam", samples=config["sample"])
    output:
        expand("bam/{samples}_realigned_sorted.bam", samples=config["sample"])
    shell:
        "~/share/usr/samtools/1.3.1/bin/samtools sort -o {output} {input}"
